@using CMS_Application.Models
<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        * {
            font-family: serif;
        }
        .field-validation-error {
            color: red;
        }

        .input-validation-error {
            border: 1px solid red;
