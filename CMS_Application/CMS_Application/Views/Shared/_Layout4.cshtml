@using CMS_Application.Models
<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <style>
        * {
            font-family: serif;
        }
    </style>
</head>
<body>
    <div class="row mt-3">
        <div class="col-sm-4 col-md-4 col-lg-3">
            <div class="ml-5"><img src="/Images/cms2.jpg" style="max-width:100px" /></div>
        </div>
        <div class="col-sm-8 col-md-8 col-lg-9">
            <h1 class="mt-4 mb-4 ml-5" style="font-family: serif; color: #2F71B2">CAMPUS MANAGEMENT SYSTEM</h1>
        </div>
        <div class="col-sm-10 col-md-10 col-lg-8 mt-3 px-4 mr-0 text-white bg-primary pt-2 pb-2 pl-2" style="margin-left:4.5%;">
            <h2>
                <a asp-controller="Admin" asp-action="ShowHomePage" asp-route-id="@Model.Id" class="text-white mt-1 mb-1 mr-3">Admin Portal</a>
            </h2>
        </div>
        <div class="col-sm-2 col-md-2 col-lg-3 ml-0 mt-3 px-3 text-white bg-primary pt-2 pb-2 pl-2 d-flex justify-content-end align-items-end">
            <a asp-controller="Home" asp-action="Index" asp-route-id="@Model.Id" class="text-primary btn-light p-2 mt-1 mb-1 mr-3">Logout</a>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div style="padding:2%;margin:1%">

                @RenderBody()
            </div>
        </div>
    </div>

</body>
</html>